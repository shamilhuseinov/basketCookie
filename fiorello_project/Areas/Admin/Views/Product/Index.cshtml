@using fiorello_project.Areas.Admin.ViewModels.Product
@using fiorello_project.Models
@model ProductIndexViewModel
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Product</h4>
                        <h5>Filter by:</h5>
                        <div class="filter-section">
                            <form method="get" asp-action="index" asp-controller="product">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="Title"></label>
                                            <input class="form-control" asp-for="Title" />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="CategoryId"></label>
                                            <select class="form-select" asp-for="CategoryId" asp-items="Model.Categories">
                                                <option value="">Seçin</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="MinPrice"></label>
                                            <input class="form-control" asp-for="MinPrice" />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="MaxPrice"></label>
                                            <input class="form-control" asp-for="MaxPrice" />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="MinQuantity"></label>
                                            <input class="form-control" asp-for="MinQuantity" />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="MaxQuantity"></label>
                                            <input class="form-control" asp-for="MaxQuantity" />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="CreatedAtStart"></label>
                                            <input type="date" class="form-control" asp-for="CreatedAtStart" />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="CreatedAtEnd"></label>
                                            <input type="date" class="form-control" asp-for="CreatedAtEnd" />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="Status"></label>
                                            <select class="form-select" asp-for="Status" asp-items="Html.GetEnumSelectList<ProductStatus>()">
                                                <option value="">Seçin</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <button class="btn btn-primary" type="submit">Search</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <a class="btn btn-primary" asp-action="create" asp-controller="product" asp-area="admin">CREATE PRODUCT</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Title</th>
                                        <th>Category</th>
                                        <th>Status</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Photo</th>
                                        <th>Created at</th>
                                        <th>Actions</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.Products)
                                    {
                                        <tr>
                                            <td>@product.Id</td>
                                            <td>@product.Title</td>
                                            <td>@product.Category.Title</td>
                                            <td>@product.Status</td>
                                            <td>@product.Price</td>
                                            <td>@product.Quantity</td>
                                            <td><img src="~/assets/img/@product.MainPhotoName" /></td>
                                            <td>@product.CreatedAt.ToShortDateString()</td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="update" asp-controller="product" asp-area="admin" asp-route-id="@product.Id">Update</a>
                                                <a class="btn btn-danger" onclick="confirm('Eminsinizmi?')" asp-action="delete" asp-controller="product" asp-area="admin" asp-route-id="@product.Id">Delete</a>
                                                <a class="btn btn-info" asp-action="details" asp-controller="product" asp-area="admin" asp-route-id="@product.Id">Details</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>